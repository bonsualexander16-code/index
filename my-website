  <script>
    /* Fixed logic:
       - prompt returns null if cancelled â€” handle that
       - compare trimmed string with code using ===
       - don't try to call .trim() on null
    */
    (function () {
      const code = '19735246';
      const btn = document.getElementById('but');

      btn.addEventListener('click', function () {
        const raw = window.prompt('THE SECRET CODE');
        if (raw === null) {
          // user cancelled
          return;
        }

        const entry = raw.trim();
        if (entry === '') {
          window.alert('Please enter a code.');
          return;
        }

        if (entry === code) {
          window.alert('OWNER IS ALEXANDER BONSU');
        } else {
          window.alert('INCORRECT CODE');
        }
      });
    })();
  </script>
